# CusFlow Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SECONDS=86400

# =============================================================================
# Metarank Configuration
# =============================================================================
METARANK_HOST=localhost
METARANK_PORT=8080
METARANK_API_KEY=

# =============================================================================
# GenAI Configuration
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Local embeddings (sentence-transformers)
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
USE_LOCAL_EMBEDDINGS=true

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_PATH=models/
RANKING_MODEL_NAME=lambdamart_v1.joblib
CANDIDATE_MODEL_NAME=ann_index.faiss

# =============================================================================
# Data Configuration
# =============================================================================
DATA_PATH=data/
DOMAIN=hotel  # hotel, wealth_report, ecommerce

# =============================================================================
# Evaluation Configuration
# =============================================================================
EVAL_METRICS=ndcg@10,map,recall@10,mrr
AB_SIMULATION_TRAFFIC_RATIO=0.5

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
